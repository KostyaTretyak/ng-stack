{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@ng-stack/contenteditable": [
        "dist/contenteditable"
      ],
      "@ng-stack/api-mock": [
        "dist/api-mock"
      ],
      "@ng-stack/forms": [
        "dist/forms"
      ]
    }
  }
}